# =============================================================================
# MACRO AI AGENT - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# LLM API Keys
# -----------------------------------------------------------------------------

# Anthropic Claude API (Primary LLM for agent reasoning)
ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI API (Optional - for embeddings or alternative LLM)
OPENAI_API_KEY=sk-...

# Preferred model for agent reasoning
# Options: claude-sonnet-4-5, claude-opus-4, claude-haiku-4-5
LLM_MODEL=claude-haiku-4-5

# Embedding model
# Options: text-embedding-ada-002 (OpenAI), voyage-2 (Voyage AI)
EMBEDDING_MODEL=text-embedding-ada-002

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# PostgreSQL Connection (if using direct connection)
DATABASE_URL=postgresql://user:password@host:5432/database

# Vector Search Configuration
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_METRIC=cosine

# -----------------------------------------------------------------------------
# Economic Data APIs
# -----------------------------------------------------------------------------

# Federal Reserve Economic Data (FRED) - FREE
# Get your key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your-fred-api-key

# Alpha Vantage (Optional - for market data)
# Get your key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# World Bank API (Optional - no key required for basic access)
WORLD_BANK_API_ENABLED=false

# -----------------------------------------------------------------------------
# News & Content APIs
# -----------------------------------------------------------------------------

# News API (for news aggregation)
# Get your key at: https://newsapi.org/
NEWS_API_KEY=your-news-api-key

# Bloomberg API (Enterprise - optional)
BLOOMBERG_API_KEY=
BLOOMBERG_API_SECRET=

# Reuters API (Enterprise - optional)
REUTERS_API_KEY=

# Financial Times API (Enterprise - optional)
FT_API_KEY=

# RSS Feeds Configuration
RSS_FEEDS_ENABLED=true
RSS_UPDATE_INTERVAL=3600  # seconds

# -----------------------------------------------------------------------------
# Web Scraping Configuration
# -----------------------------------------------------------------------------

# User agent for web scraping
USER_AGENT=Mozilla/5.0 (compatible; MacroAIAgent/0.1; +https://yoursite.com/bot)

# Rate limiting
SCRAPER_DELAY=2  # seconds between requests
SCRAPER_MAX_RETRIES=3

# FOMC Scraper
FOMC_SCRAPER_ENABLED=true
FOMC_BASE_URL=https://www.federalreserve.gov

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# Environment
ENV=development  # development, staging, production

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true  # auto-reload on code changes (dev only)

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8501
CORS_ALLOW_CREDENTIALS=true

# API Security
API_KEY_ENABLED=false
API_KEYS=  # comma-separated list of API keys

# JWT Configuration (if using JWT authentication)
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600  # seconds

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------

# Retrieval Configuration
RETRIEVAL_TOP_K=5
RETRIEVAL_SCORE_THRESHOLD=0.7

# Agent Reasoning
AGENT_MAX_ITERATIONS=5
AGENT_TIMEOUT=30  # seconds

# Response Formatting
AGENT_OUTPUT_FORMAT=json  # json, markdown, text

# Macro Reasoning Chain
REASONING_VERBOSE=true
REASONING_INCLUDE_SOURCES=true

# -----------------------------------------------------------------------------
# Action Engine Configuration
# -----------------------------------------------------------------------------

# Risk Profiles
DEFAULT_RISK_PROFILE=moderate  # conservative, moderate, aggressive

# Action Generation
MAX_ACTIONS_PER_QUERY=3
INCLUDE_RISK_NOTES=true

# Portfolio Analysis
PORTFOLIO_ANALYSIS_ENABLED=true

# -----------------------------------------------------------------------------
# Data Ingestion Configuration
# -----------------------------------------------------------------------------

# Ingestion Schedule
INGESTION_ENABLED=true
INGESTION_SCHEDULE=0 */6 * * *  # cron: every 6 hours

# Data Sources Priority
DATA_SOURCES=fred,news_api,rss,fomc

# Data Retention
DATA_RETENTION_DAYS=365
RAW_DATA_CLEANUP=true

# PDF Processing
PDF_PROCESSING_ENABLED=false
PDF_MAX_SIZE_MB=10

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------

# Logging Level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Log Format
LOG_FORMAT=json  # json, text

# Log File
LOG_FILE=logs/macro-agent.log
LOG_ROTATION=500 MB

# OpenTelemetry (Optional)
OTEL_ENABLED=false
OTEL_ENDPOINT=http://localhost:4318

# Sentry (Optional - for error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------

# Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Vite/React
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_TITLE=Macro AI Agent

# -----------------------------------------------------------------------------
# Testing Configuration
# -----------------------------------------------------------------------------

# Test Database
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/test_db

# Test Mode
TEST_MODE=false
MOCK_LLM_RESPONSES=false

# -----------------------------------------------------------------------------
# Cache Configuration
# -----------------------------------------------------------------------------

# Redis (Optional - for caching)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379

# In-Memory Cache
CACHE_TTL=3600  # seconds
CACHE_MAX_SIZE=1000  # items

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable/Disable Features
FEATURE_BRIEFING=true
FEATURE_CHAT=true
FEATURE_ACTIONS=true
FEATURE_PORTFOLIO_ANALYSIS=true
FEATURE_SCENARIO_SIMULATION=false  # future feature

# Experimental Features
EXPERIMENTAL_ML_REGIME_CLASSIFICATION=false
EXPERIMENTAL_MULTI_AGENT=false

# -----------------------------------------------------------------------------
# Deployment Configuration
# -----------------------------------------------------------------------------

# Vercel (Frontend)
VERCEL_TOKEN=

# Railway (Backend)
RAILWAY_TOKEN=

# Docker
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------

# Hot Reload
HOT_RELOAD=true

# Debug Mode
DEBUG=true

# Profiling
ENABLE_PROFILING=false

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------
# 1. Always use strong, unique values for secrets in production
# 2. Rotate API keys regularly
# 3. Use environment-specific .env files (.env.development, .env.production)
# 4. Consider using a secrets manager (AWS Secrets Manager, HashiCorp Vault)
# 5. Never commit .env files to version control
# =============================================================================
